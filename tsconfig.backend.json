{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "backend-dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "backend/**/*.ts",
    "backend/**/*.tsx",
    "src/js/**/*.ts",
    "src/js/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
